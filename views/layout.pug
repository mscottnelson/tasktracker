doctype html
html
  head
    script(src="/jspm_packages/system.js")
    script(src="/config.js")
    script
      | System.import('app').catch(console.error.bind(console));
    title Task Tracker
  body(style="display: none")
    div.container
      .page-header
        block header
          p Header
      .row
        != messages()
      block body
      block footer
        if user
          .row
            .col-md-12
              .pull-right
                small You are signed in as #{user.username}!
                a(href="/users/logout")  Logout.
